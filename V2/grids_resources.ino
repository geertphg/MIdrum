//
// I was unable to combine
// the use of bitshifting in ReadDrumMap()
// with my use of variable types.
// So I decided to rewrite the code into my simple speak.
// 
void readMIdrumMAP(){
  // Faders[] is a 10bit value
  unsigned int i = Faders[6] / 256;    // zone-index (2bit)
  unsigned int j = Faders[7] / 256;
  unsigned int xx = Faders[6] % 256;   // relative position within a zone (8bit)
  unsigned int yy = Faders[7] % 256;
  unsigned int xx_inv= 255-xx;          
  unsigned int yy_inv= 255-yy;
  // retrieve the 4 nodes surrounding the selected zone
  const prog_uint8_t* a_map = drum_map[i][j];
  const prog_uint8_t* b_map = drum_map[i + 1][j];
  const prog_uint8_t* c_map = drum_map[i][j + 1];
  const prog_uint8_t* d_map = drum_map[i + 1][j + 1];
  // for each drum
  for (int z=0; z<3; z++){
      // calculate position in each node
      unsigned int offset = (z * 32) + stepNr;
      // retrieve value from each node
      unsigned int a = pgm_read_byte(a_map + offset);  // 8bit
      unsigned int b = pgm_read_byte(b_map + offset);
      unsigned int c = pgm_read_byte(c_map + offset);
      unsigned int d = pgm_read_byte(d_map + offset);
      // calculate Density
      unsigned int ab = (xx*b + xx_inv*a) >>8;         // 16bit but 8bits shifted, so effectively only 8bit
      unsigned int cd = ( xx * d + xx_inv * c ) >>8;
      DrumDens[z]= ( yy * cd + yy_inv * ab ) >> 8 ;    // 16bit but 8bits shifted, so effectively only 8bit
  }
}
